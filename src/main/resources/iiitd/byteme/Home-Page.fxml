<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="1000.0" prefWidth="1000.0" maxHeight="1000" minHeight="1000" maxWidth="1000" minWidth="1000" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iiitd.byteme.handlers.HomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Welcome to Byte Me!">
      <font>
         <Font size="22.0" />
      </font>
    </Label>

    <Button alignment="CENTER" contentDisplay="CENTER" onAction="#onLogin" prefHeight="30.0" prefWidth="100.0" text="Login" textAlignment="CENTER" wrapText="true">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font size="15.0" />
      </font>
    </Button>

   <Button alignment="CENTER" contentDisplay="CENTER" onAction="#onRegister" prefHeight="30.0" prefWidth="100.0" text="Register" textAlignment="CENTER" wrapText="true">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font size="15.0" />
      </font>
   </Button>

   <Button alignment="CENTER" contentDisplay="CENTER" onAction="#onExit" prefHeight="30.0" prefWidth="100.0" text="Exit" textAlignment="CENTER" wrapText="true">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font size="15.0" />
      </font>
   </Button>
</VBox>