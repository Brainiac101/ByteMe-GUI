   <Button layoutX="437.0" layoutY="643.0" mnemonicParsing="false" onAction="#onRegister" prefHeight="30.0" prefWidth="100.0" text="Register">
      <font>
         <Font size="15.0" />
      </font>
   </Button>
   <Button layoutX="436.0" layoutY="704.0" mnemonicParsing="false" onAction="#onBack" prefHeight="30.0" prefWidth="100.0" text="Back">
