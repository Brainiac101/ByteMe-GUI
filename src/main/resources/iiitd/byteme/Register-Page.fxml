<AnchorPane prefHeight="1000.0" prefWidth="1000.0" maxWidth="1000" minWidth="1000" maxHeight="1000" minHeight="1000" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iiitd.byteme.handlers.RegisterController">
   <Label layoutX="440.0" layoutY="328.0" text="User Registration">
      <font>
         <Font size="22.0" />
      </font>
   </Label>
   <!--Username input-->
   <Label layoutX="351.0" layoutY="412.0" text="Enter Username ">
      <font>
         <Font size="15.0" />
      </font>
   </Label>
   <TextField fx:id="username" layoutX="473.0" layoutY="407.0">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor>
      <font>
         <Font size="15.0" />
      </font>
   </TextField>
   <!--Password input-->
   <Label layoutX="348.0" layoutY="473.0" text="Enter Password ">
      <font>
         <Font size="15.0" />
      </font>
   </Label>
   <TextField fx:id="password" layoutX="473.0" layoutY="468.0">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor>
      <font>
         <Font size="15.0" />
      </font>
   </TextField>
   <!--Address input-->
   <Label layoutX="357.0" layoutY="538.0" text="Enter Address ">
      <font>
         <Font size="15.0" />
      </font>
   </Label>
   <TextField fx:id="address" layoutX="473.0" layoutY="532.0">
      <cursor>
         <Cursor fx:constant="TEXT" />
